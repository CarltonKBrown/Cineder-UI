
<div class="overflow-auto scroll-content">
        @for (int row = 0; row < Rows; row++)
        {
            <div class="card-group">
                @foreach (var movie in RowItems[row])
                {
                    <div class="card text-white bg-dark col-md-3 col-sm-12">
                        <img src="@ImagePath(movie.PosterPath)" class="card-img-top img-thumbnail" />
                        <div class="card-body">
                            <p class="card-text"><small class="text-muted">@movie.ReleaseDate.Year</small></p>
                            <h5 class="card-title">@movie.Name</h5>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

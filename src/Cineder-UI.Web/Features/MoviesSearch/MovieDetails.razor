@page "/movies/{id:int}"
<PageTitle>Cineder - @PageName</PageTitle>

<div class="container site-content">
    <div class="container">
        <div class="container">
            <BreadCrumbNav BreadCrumbs="NavItems"></BreadCrumbNav>
        </div>
        <div class="container">
            <header class="border-bottom border-2 border-white mb-3">
                <h2 class="page-title">@PageName</h2>
            </header>
        </div>
        <Loading IsLoading=IsLoading></Loading>
        <div class="container position-relative @(IsLoading ? "d-none" : "")">
            <div class="position-absolute top-50 start-50">
                <p>@Id</p>
                <img src="@ImagePath(Movie.PostePath)" class="card-img" />
            </div>
        </div>
    </div>
</div>




@page "/"

<PageTitle>Home</PageTitle>

<div class="container-fluid main-content">
    <div class="main-content-form position-absolute start-0 end-0 mt-3">
        <div class="container">
            <div class="row justify-content-center my-3">
                <div class="col-md-8 col-sm-12 col-12">
                    <h3 class="text-white text-center text-nowrap fs-1">SEARCH MOVIES &amp; SERIES</h3>
                 </div>
            </div>
            <EditForm id="search-form-main" Model="Model" OnValidSubmit="Submit">
                <div class="row justify-content-center my-3">
                    <div class="col-sm-10 col-md-8 col-lg-6 col-12">
                        <div id="search-wrapper" class="input-group">
                            <InputText id="search-text" @bind-Value="Model!.SearchText" class="form-control"
                                       placeholder="Enter Movies or Search Title" />
                            <button id="search-btn" type="submit" class="btn btn-black">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row text-center my-3">
                    <div class="col">
                        <InputRadioGroup Name="search-type" @bind-Value="Model.SearchType">
                            @foreach (var siteMode in SiteModesOptions)
                            {
                                <div class="form-check form-check-inline">
                                    <InputRadio id="@RadioButtonId(siteMode)" Name="search-type" Value="@((int)siteMode)" class="form-check-input btn-outline-dark" />
                                    <label class="form-check-label text-white">@siteMode</label>
                                </div>
                            }
                        </InputRadioGroup>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
</div>
